<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_centerHorizontal="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/DeleteBtn"
            android:layout_width="0dp"
            android:layout_weight=".20"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_delete"
            android:text="@string/delete"
            android:textColor="#fff"
            android:textSize="40dp"/>
        <LinearLayout
            android:id="@+id/Space"
            android:layout_width="0dp"
            android:layout_weight=".03"
            android:layout_height="match_parent"
            android:background="#33475b"
            android:orientation="horizontal"/>
        <RelativeLayout
            android:id="@+id/ContainerBox"
            android:layout_width="0dp"
            android:layout_weight=".77"
            android:background="@drawable/row_inner_border"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ConatinerTop"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ItemNumber"
                    android:layout_width="0dp"
                    android:layout_weight=".40"
                    android:layout_height="match_parent"
                    android:textColor="#000"
                    android:textSize="30sp"
                    android:maxLines="1"
                    android:maxLength="6"
                    android:gravity="center"
                    android:background="#fff"
                    android:text="@string/counter"/>
                <TextView
                    android:id="@+id/ItemText"
                    android:layout_width="0dp"
                    android:layout_weight=".60"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:textSize="35sp"
                    android:gravity="center"
                    android:background="@drawable/ripple_effect"
                    android:text="@string/item_number_title"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/ConatinerBottom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/ConatinerTop">
                <TextView
                    android:id="@+id/ItemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/row_inner_border"
                    android:textColor="#979797"
                    android:textSize="30sp"
                    android:maxLines="1"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:gravity="right|center"
                    android:text="@string/item_title"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
