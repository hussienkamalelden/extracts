<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33475b">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CoordinatorLayout">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#373737">
                <RelativeLayout
                    android:id="@+id/ToolbarContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:textStyle="bold"
                        android:text="Report"/>
                    <Button
                        android:id="@+id/toolbar_done"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:textColor="#eeeeee"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"
                        android:textSize="20sp"
                        android:background="#373737"
                        android:text="@string/done"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
    </android.support.design.widget.CoordinatorLayout>

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/CoordinatorLayout">
        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_container">
            <TextView
                android:id="@+id/project_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_below="@+id/extract_num"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:text="@string/project_title"/>
            <LinearLayout
                android:id="@+id/wall_project_title"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#1abc9c"
                android:layout_below="@+id/project_title"
                android:orientation="horizontal"/>
            <EditText
                android:id="@+id/project_title_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:hint="ادخل المشروع"
                android:gravity="right|center"
                android:layout_below="@+id/wall_project_title"
                android:inputType="text"/>
            <RelativeLayout
                android:id="@+id/date_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/project_title_edit"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/project_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/project_date_title"/>
                <LinearLayout
                    android:id="@+id/wall_project_date"
                    android:layout_width="2dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:background="#00cb00"
                    android:layout_toLeftOf="@+id/project_date_title"
                    android:orientation="horizontal"/>
                <Button
                    android:id="@+id/project_date_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/ripple_effect"
                    android:layout_marginLeft="10dp"
                    android:text="Select date"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:layout_toLeftOf="@+id/wall_project_date"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/images_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/date_box">
                <TextView
                    android:id="@+id/images_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/images_title"/>
                <LinearLayout
                    android:id="@+id/wall_images"
                    android:layout_width="2dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:background="#00cb00"
                    android:layout_toLeftOf="@+id/images_title"
                    android:orientation="horizontal"/>
                <Button
                    android:id="@+id/choose_images"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/ripple_effect"
                    android:layout_marginLeft="10dp"
                    android:textColor="#fff"
                    android:text="Images"
                    android:textSize="20dp"
                    android:layout_toLeftOf="@+id/wall_images"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/images_box"
                android:text="@string/content_title"/>
            <LinearLayout
                android:id="@+id/wall_content"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#1abc9c"
                android:layout_below="@+id/content_title"
                android:orientation="horizontal"/>
            <EditText
                android:id="@+id/content_text_edit"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/wall_content"
                android:hint="ادخل المحتوى .."
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:padding="5dp"
                android:gravity="top"
                android:layout_marginBottom="10dp"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:background="@drawable/edit_text_bg"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
